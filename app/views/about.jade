#about_card.card
  .card-image
    img(src="images/duniter_250x250.png")
  .card-content
    span.card-title.grey-text.text-darken-4 {{ 'help.about_duniter.subtitle' | translate }}
    p {{ 'help.about_duniter.version' | translate }}
      i {{ version }}
  .card-action
    a(href="https://duniter.org" onclick="openExternal(this.href); return false")
      i.fa.fa-2x.fa-globe
      span duniter.org
    a(href="https://git.duniter.org/nodes/typescript/duniter" onclick="openExternal(this.href); return false")
      i.fa.fa-2x.fa-github
      span gitlab/duniter
    a(href="https://forum.duniter.org" onclick="openExternal(this.href); return false")
      i.fa.fa-2x.fa-comment-o
      span {{ 'help.about_duniter.forum' | translate }}
    a(href="https://chat.duniter.org" onclick="openExternal(this.href); return false")
      i.fa.fa-2x.fa-comments-o
      span {{ 'help.about_duniter.chat' | translate }}
